<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/light_gray"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewUser"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="right"
                    android:background="@drawable/account_box"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:fontFamily="sans-serif-black"
                    android:text="HOŞGELDİNİZ"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="left|bottom"
                    android:text="LOREP IPSUM"
                    android:textSize="30sp" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/viewCustomers"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/cardViewUser"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="230dp"
                android:clickable="true"
                app:cardCornerRadius="20dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:text="Müşteriler"
                    android:textSize="25sp" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center|top"
                    android:background="@drawable/users" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/viewSuppliers"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@+id/cardViewUser"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="230dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="30dp"
                android:layout_toRightOf="@id/viewCustomers"
                android:clickable="true"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center|top"
                    android:background="@drawable/suppliers" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:text="Tedarikçiler"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/viewProducts"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/viewCustomers"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="230dp"
                android:clickable="true"
                app:cardCornerRadius="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:text="Ürünler"
                    android:textSize="25sp" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center|top"
                    android:background="@drawable/products" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/viewSales"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/viewCustomers"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="230dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_toRightOf="@id/viewProducts"
                android:clickable="true"
                app:cardCornerRadius="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:text="Satışlar"
                    android:textSize="25sp" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/sales" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/viewBuying"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/viewProducts"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="230dp"
                android:clickable="true"
                app:cardCornerRadius="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:text="Alışlar"
                    android:textSize="25sp" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/buying" />


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/viewCosts"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/viewProducts"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="230dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_toRightOf="@+id/viewBuying"
                android:clickable="true"
                app:cardCornerRadius="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:text="Masraflar"
                    android:textSize="25sp" />


                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center|top"
                    android:layout_marginLeft="7sp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/costs" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/viewCompute"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/viewBuying"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="230dp"
                android:clickable="true"
                app:cardCornerRadius="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:text="Hesaplar"
                    android:textSize="25sp" />


                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/calculate" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/viewStocks"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/viewCosts"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="230dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_toRightOf="@+id/viewCompute"
                android:clickable="true"
                app:cardCornerRadius="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:text="Stoklar"
                    android:textSize="25sp" />


                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/stocks" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/viewReports"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/viewCompute"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="230dp"
                android:layout_marginBottom="15dp"
                android:clickable="true"
                app:cardCornerRadius="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:text="Raporlar"
                    android:textSize="25sp" />


                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/reports" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/viewSettings"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/viewStocks"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="230dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="15dp"
                android:layout_toRightOf="@+id/viewReports"
                android:clickable="true"
                app:cardCornerRadius="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:text="Ayarlar"
                    android:textSize="25sp" />


                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/settings" />

            </androidx.cardview.widget.CardView>


        </RelativeLayout>
    </ScrollView>


</LinearLayout>


