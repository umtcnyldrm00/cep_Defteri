<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7E7E7"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="410dp"
        android:layout_height="700dp"
        android:layout_gravity="bottom">


        <androidx.cardview.widget.CardView
            android:id="@+id/viewCustomers"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            app:cardCornerRadius="20dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:text="Müşteriler"
                android:textSize="25sp" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center|top"
                android:background="@drawable/users" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/viewSuppliers"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/viewCustomers"
            android:clickable="true"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center|top"
                android:background="@drawable/suppliers" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:text="Tedarikçiler"
                android:textSize="25sp" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/viewProducts"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/viewCustomers"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:text="Ürünler"
                android:textSize="25sp" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center|top"
                android:background="@drawable/products" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/viewSales"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/viewCustomers"
            android:layout_marginLeft="39dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/viewProducts"
            android:clickable="true"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:text="Satışlar"
                android:textSize="25sp" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="5dp"
                android:background="@drawable/sales" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/viewBuying"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/viewProducts"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:text="Alışlar"
                android:textSize="25sp" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="5dp"
                android:background="@drawable/buying" />


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/viewCosts"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/viewProducts"
            android:layout_marginLeft="39dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/viewBuying"
            android:clickable="true"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:text="Masraflar"
                android:textSize="25sp" />


            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center|top"
                android:layout_marginLeft="7sp"
                android:layout_marginTop="7dp"
                android:background="@drawable/costs" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/viewCompute"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/viewBuying"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:text="Hesaplar"
                android:textSize="25sp" />


            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="7dp"
                android:background="@drawable/calculate" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/viewStocks"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/viewCosts"
            android:layout_marginLeft="39dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/viewCompute"
            android:clickable="true"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:text="Stoklar"
                android:textSize="25sp" />


            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center|top"

                android:layout_marginTop="7dp"
                android:background="@drawable/stocks" />

        </androidx.cardview.widget.CardView>


    </RelativeLayout>


</ScrollView>


